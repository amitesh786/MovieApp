{
  "arrowParens": "always",
  "trailingComma": "es5",
  "tabWidth": 2,
  "singleQuote": false,
  "printWidth": 140,
  "endOfLine": "lf",
  "semi": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(.*)", 
    "antd/(.*)",
    "<THIRD_PARTY_MODULES>",
    "interface",
    "(?=content|api)",
    "context/",
    "mock/",
    "config",
    "helpers/",
    "hooks/",
    ".svg",
    "^../(.*)$",
    "(?=./styles.module.scss)",
    "(components/|./index)",
    "@/(.*)", "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
